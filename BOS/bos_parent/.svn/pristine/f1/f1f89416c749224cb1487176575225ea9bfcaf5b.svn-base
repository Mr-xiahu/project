package com.xiahu.bos.action;

import java.io.IOException;

import org.apache.struts2.ServletActionContext;
import org.hibernate.criterion.DetachedCriteria;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.xiahu.bos.action.base.BaseAction;
import com.xiahu.bos.domain.PageBean;
import com.xiahu.bos.domain.Staff;
import com.xiahu.bos.service.IStaffService;

import net.sf.json.JSONObject;

/*
 * 取派员管理
 */
@Controller
@Scope("prototype")
public class StaffAction extends BaseAction<Staff> {

	@Autowired
	private IStaffService staffService;

	/*
	 * 添加取派员
	 */
	public String addStaff() {
		staffService.save(model);
		return LIST;
	}

	private int pages;
	private int rows;

	/*
	 * 分页查询方法
	 */
	public String pageQuery() throws IOException {
		// 封装PageBean
		PageBean pageBean = new PageBean();
		pageBean.setCurrentPage(pages);
		pageBean.setPageSize(rows);

		// 创建离线查询对象
		DetachedCriteria dc = DetachedCriteria.forClass(Staff.class);
		pageBean.setDetachedCriteria(dc);
		staffService.getPageBean(pageBean);

		// 使用json-lib将PageBean对象转为json，通过输出流写回页面中
		String json = JSONObject.fromObject(pageBean).toString();
		ServletActionContext.getResponse().setContentType("text/json;charset=utf-8");
		ServletActionContext.getResponse().getWriter().write(json);
		return NONE;
	}

	private String ids;

	/*
	 * 批量删除取派员
	 */
	public String deleteBatch() {
		staffService.deleteBatch(ids);

		return LIST;
	}

	public String editStaff() {
		Staff staff = staffService.findById(model.getId());
		// 使用页面提交的数据进行覆盖
		staff.setName(model.getName());
		staff.setTelephone(model.getTelephone());
		staff.setHaspda(model.getHaspda());
		staff.setStandard(model.getStandard());
		staff.setStation(model.getStation());
		staffService.update(staff);
		return LIST;
	}

	public int getPages() {
		return pages;
	}

	public void setPages(int pages) {
		this.pages = pages;
	}

	public int getRows() {
		return rows;
	}

	public void setRows(int rows) {
		this.rows = rows;
	}

	public String getIds() {
		return ids;
	}

	public void setIds(String ids) {
		this.ids = ids;
	}

}
